<!DOCTYPE html>
<html>
  <head>
    <title>Users</title>
    <link rel="stylesheet" href="/css/users.css" />
  </head>
  <body>
    <h2>Welcome, <%= currentUser.name %>!</h2>
    <a href="/logout">Logout</a>
    <div class="user-grid">
      <% users.forEach(user => { %>
      <div class="user-card">
        <p><strong><%= user.name %></strong></p>
        <p><%= user.email %></p>
      </div>
      <% }) %>
    </div>
    <script src="/js/users.js"></script>
  </body>
</html>
