<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard | Node.js App</title>
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/libs/fontawesome/all.min.css" />
  </head>
  <body>
    <div class="dashboard-container">
      <!-- Sidebar Navigation -->
      <aside class="sidebar">
        <div class="sidebar-header">
          <h2>Appplication</h2>
        </div>
        <nav class="sidebar-nav">
          <ul>
            <li class="active">
              <a href="/">
                <i class="fas fa-home"></i>
                <span>Dashboard</span>
              </a>
            </li>
            <li>
              <a href="/profile">
                <i class="fas fa-user"></i>
                <span>Profile</span>
              </a>
            </li>
            <li>
              <a href="/messages">
                <i class="fas fa-envelope"></i>
                <span>Messages</span>
                <span class="badge">3</span>
              </a>
            </li>
            <li>
              <a href="/settings">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
              </a>
            </li>
            <li>
              <a href="/analytics">
                <i class="fas fa-chart-bar"></i>
                <span>Analytics</span>
              </a>
            </li>
          </ul>
        </nav>
        <div class="sidebar-footer">
          <a href="/logout" class="logout-btn">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
          </a>
        </div>
      </aside>

      <!-- Main Content Area -->
      <main class="main-content">
        <!-- Top Navigation Bar -->
        <header class="top-bar">
          <div class="search-bar">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Search..." />
          </div>
          <div class="user-profile">
            <img src="/images/avatar.jpg" alt="User Avatar" />
            <span>Welcome, <strong>Username</strong></span>
            <i class="fas fa-chevron-down"></i>
          </div>
        </header>

        <!-- Dashboard Content -->
        <div class="content-wrapper">
          <h1>Dashboard Overview</h1>

          <!-- Stats Cards -->
          <div class="stats-cards">
            <div class="card">
              <div class="card-icon blue">
                <i class="fas fa-users"></i>
              </div>
              <div class="card-info">
                <h3>Total Users</h3>
                <p>1,254</p>
                <span class="trend up">+12% from last month</span>
              </div>
            </div>
            <div class="card">
              <div class="card-icon green">
                <i class="fas fa-chart-line"></i>
              </div>
              <div class="card-info">
                <h3>Revenue</h3>
                <p>$8,420</p>
                <span class="trend up">+8% from last month</span>
              </div>
            </div>
            <div class="card">
              <div class="card-icon orange">
                <i class="fas fa-shopping-cart"></i>
              </div>
              <div class="card-info">
                <h3>Orders</h3>
                <p>324</p>
                <span class="trend down">-3% from last month</span>
              </div>
            </div>
            <div class="card">
              <div class="card-icon purple">
                <i class="fas fa-tasks"></i>
              </div>
              <div class="card-info">
                <h3>Tasks</h3>
                <p>18</p>
                <span>5 completed</span>
              </div>
            </div>
          </div>

          <!-- Recent Activity and Charts Section -->
          <div class="main-section">
            <div class="recent-activity">
              <h2>Recent Activity</h2>
              <div class="activity-list">
                <div class="activity-item">
                  <div class="activity-icon">
                    <i class="fas fa-user-plus"></i>
                  </div>
                  <div class="activity-content">
                    <p>New user registered - John Doe</p>
                    <small>2 hours ago</small>
                  </div>
                </div>
                <div class="activity-item">
                  <div class="activity-icon">
                    <i class="fas fa-shopping-cart"></i>
                  </div>
                  <div class="activity-content">
                    <p>New order #3254 placed</p>
                    <small>5 hours ago</small>
                  </div>
                </div>
                <div class="activity-item">
                  <div class="activity-icon">
                    <i class="fas fa-comment"></i>
                  </div>
                  <div class="activity-content">
                    <p>New message from Sarah</p>
                    <small>1 day ago</small>
                  </div>
                </div>
              </div>
            </div>

            <div class="chart-container">
              <h2>Monthly Performance</h2>
              <canvas id="performanceChart"></canvas>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- JavaScript Files -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/index.js"></script>
  </body>
</html>
