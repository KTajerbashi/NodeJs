<div class="page-container">
  <div class="page-content app-height-100">
    <div class="app-grid">
      <% for(let item of users) { %>
      <div class="app-width-1-4">
        <div class="app-card">
          <div class="app-card-header">
            <em><%= item.username %></em>
          </div>
          <div class="app-card-content">
            <div class="app-card-item">
              <strong>Name</strong> : <em><%= item.name %></em>
            </div>
            <div class="app-card-item">
              <strong>Family</strong> : <em><%= item.family %></em>
            </div>
          </div>
          <div class="app-card-footer">
            <button class="app-btn app-btn-danger app-float-left">
              <span class="material-icons">delete</span>
              <span>Remove</span>
            </button>

            <button class="app-btn app-btn-warning app-float-left">
              <span class="material-icons">edit</span>
              <span>Update</span>
            </button>

            <button class="app-btn app-btn-primary app-float-left">
              <span class="material-icons">login</span>
              <span>Login As</span>
            </button>

            <button class="app-btn app-btn-success app-float-left">
              <span class="material-icons">policy</span>
              <span>Set Role</span>
            </button>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
